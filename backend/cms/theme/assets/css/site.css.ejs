
body {
  font-size:14px;
  color:#666;
  background: url(<%=url('assets/images/background.png')%>) #eae6d1
}

header {
  margin: 0;
  padding: 15px 0;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  text-align: center;
  background: #2980b9;
  -moz-box-shadow: 1px 0px 2px rgba(0, 0, 0, 0.75);
  -webkit-box-shadow: 1px 0px 2px rgba(0, 0, 0, 0.75);
  box-shadow: 1px 0px 2px rgba(0, 0, 0, 0.75);
  z-index: 99;
  height: 115px;
}

header h1 {
  font-size: 40px;
  line-height: 54px;
  font-family:  "Helvetica Neue", Helvetica, Arial, sans-serif;
  color: #f3f3f3;
  text-shadow: 0px 2px 0px rgba(35, 87, 150, 0.2);
  margin: 0;
  padding: 0;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
  -ms-text-overflow: ellipsis
}

header p {
  color: #d8d8d8;
  text-shadow: rgba(0, 0, 0, 0.2) 0 1px 0;
  font-size: 16px;
  margin: 0;
  padding-bottom:16px;
}

footer {
  margin: 0 0 20px 0;
  text-align: center;
}

footer .small {
  display: inline-block;
  font-size: 12px;
  line-height: 16px
}

.navbar-default{
  background: #fc0;
  border: 1px solid #cca300;
  margin-top:-16px;
  z-index:1;
}

.navbar-default .navbar-brand{
  color: #9d7f0d;
  text-shadow: rgba(255, 255, 255, 0.2) 0 1px 0;
  text-transform: uppercase;
}

.navbar-default .navbar-nav>li>a{
  color: #9d7f0d;
  text-shadow: rgba(255, 255, 255, 0.2) 0 1px 0;
  text-transform: uppercase;
}

.navbar-default .navbar-nav>.active>a, .navbar-default .navbar-nav>.active>a:focus {
  color: #9d7f0d;
  background-color: #FFE788;
}

.navbar-default .navbar-nav>li>a:focus, .navbar-default .navbar-nav>li>a:hover {
  background-color: #EEE;
}

.container-site{
  padding-top: 40px;
}

.btn-default,.btn-default:focus{
  color: #777;
  background-color: #FFE788;
  border: 1px solid #dba500;
  background: linear-gradient(#ffe788,#ffce38);
  border-radius: 2px;
  box-shadow: inset 0px 1px 0px rgba(255,255,255,0.4), 0px 1px 1px rgba(0,0,0,0.1);
  transition: all 0.4s ease-in;
  outline: 0;
}

.btn-warning,.btn-warning:focus{
  outline: 0;
}

section,article{
  width: 100%;
    padding: 30px 30px 10px 30px;
    margin: 20px 0;
    position: relative;
    background: #fbfbfb;
    -webkit-border-radius: 2px;
    -moz-border-radius: 2px;
    -ms-border-radius: 2px;
    -o-border-radius: 2px;
    border-radius: 2px;
    border: 1px solid #cbcbcb;
    -webkit-box-shadow: 0px 1px 2px rgba(0,0,0,0.09), inset 0px 0px 2px 2px rgba(255,255,255,0.5), inset 0 0 5px 5px rgba(255,255,255,0.4);
    -moz-box-shadow: 0px 1px 2px rgba(0,0,0,0.09),inset 0px 0px 2px 2px rgba(255,255,255,0.5),inset 0 0 5px 5px rgba(255,255,255,0.4);
    box-shadow: 0px 1px 2px rgba(0,0,0,0.09), inset 0px 0px 2px 2px rgba(255,255,255,0.5), inset 0 0 5px 5px rgba(255,255,255,0.4);
}

.title.stat{
  color: #ababab;
  margin: 6px 0 -2px 2px;
  font-size: 12px;
}
.title.stat a{
  color: #ababab;
}
.title.stat .glyphicon{
  margin-right:2px;
}
.title.stat .num{
  margin-right:6px;
}

article h1.title{
  text-align:center;
}

article .title.stat{
  text-align:right;
}

article .relatives span{
  display:inline-block;
  width:80px;
}

article .attachments li{
  list-style:none;
}

.comments .header .stat{
  float:left;
}

.comments .header .order{
  float:right;
  line-height:60px;
}

.comments .header:after{
  display:block;
  content:'';
  clear:both;
}

.comments .comment{
  list-style:none;
}

.comments .comment .header .user{
  float:left;
}

.comments .comment .header .actions{
  float:right;
}

.comments .comment .header .user .avatar{
  float:left;
}

.comments .comment .header .user .name{
   margin-left: 40px;
   margin-top: -2px;
}

.comments .comment .header .user .date{
  margin-left: 39px;
  margin-top:-8px;
  font-style: italic;
  font-size: 13px;
  color: #8e8e93;
}

.comments .comment .header .actions{
  margin-top:6px;
}

.comments .comment .header .actions a.action{
  margin-left:6px;
  color: #8e8e93;
}

.comments .comment .header .actions a.action:hover,
.comments .comment .header .actions a.action:focus
{
  color: #23527c;
  text-decoration: none;
}

.sidebar{
  margin: 20px 0;
}

.article-list .media{
  border-bottom: 1px solid #f0f0f0;
  padding:10px 0;
}

.article-list .media-object{
  width:125px;
  height:100px;
  border-radius: 4px;
  border: 1px solid #f0f0f0;
}

.profile a.avatar{
   vertical-align: middle;
}

.profile a.avatar:hover,
.profile a.avatar:focus{
  text-decoration: none;
}

.profile .name{
   margin-left:8px;
   vertical-align: middle;
}

.profile .motto{
  margin-top:8px;
  font-style: italic;
}

.panel-recentComments .user{
  text-align:right;
}

hr{
  height: 1px;
  border: 0 none;
}
