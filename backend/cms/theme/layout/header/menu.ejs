<%
function _menuItems(categories) {
  let res = '';
  for (const item of categories) {
    if (!item.catalog) {
      res += `<li><a class="category-${item.id}" data-category-name="${item.categoryName}" href="${url('static/articles.html')}?categoryId=${item.id}&categoryName=${item.categoryName}">${item.categoryName}</a></li>`;
    } else {
      const _items = _menuItems(item.children);
      res += `
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">${item.categoryName} <span class="caret"></span></a>
          <ul class="dropdown-menu">
            ${_items}
          </ul>
        </li>`;
    }
  }
  return res;
}

const menuItems = _menuItems(site.categories);

%>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="<%=url('index.html')%>"><%=text('Home')%></a>
    </div>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <%- menuItems %>
      </ul>
      <form class="navbar-form navbar-right search" action="<%=url('static/articles.html')%>">
        <div class="form-group">
          <input name="search" type="text" class="form-control" placeholder="<%=text('Search')%>">
        </div>
        <button type="submit" class="btn btn-default"><%=text('Submit')%></button>
      </form>
      <%- await include('./language.ejs') %>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
